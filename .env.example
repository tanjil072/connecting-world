# ===== FRONTEND ENVIRONMENT VARIABLES =====
# Copy this file to .env and fill in the values

# ===== API CONFIGURATION =====
# For Physical Device (replace IP with your computer's IP)
EXPO_PUBLIC_API_URL=http://192.168.0.240:3000/api


# ===== APP CONFIGURATION =====
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_APP_NAME=Connecting World
EXPO_PUBLIC_APP_VERSION=1.0.0

# ===== FIREBASE CONFIGURATION =====
# Get these from Firebase Console > Project Settings > General tab
EXPO_PUBLIC_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=connectingworld-76bdc.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=connectingworld-76bdc
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=connectingworld-76bdc.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=YOUR_MESSAGING_SENDER_ID
EXPO_PUBLIC_FIREBASE_APP_ID=YOUR_APP_ID

# ===== FEATURE FLAGS =====
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false
